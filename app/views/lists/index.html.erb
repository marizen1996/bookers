<h1>Books</h1>

<table>
    <thead>
        <tr>
     <th>Title</th>
     <th>Body</th>
     <th clospan="3"></th>
        </tr>
    </thead>
<tbody>

    <% @lists.each do |list| %>
    <tr>
      <td>
　     <%= list.title %>
      </td>
      <td>
　     <%= list.body %>
      </td>
      <td>
         <%= link_to "show", list_path(list.id) %>
      </td>

      <td>
          <%= link_to "edit", edit_list_path(list.id) %>
      </td>
      <td>
         <%= link_to "destroy", list_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>

    </tr>
<% end %>
</tbody>
</table>

<h2>New book</h2>

<%= form_with model: List.new do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

<p>
 <%= f.submit 'Create Book' %>
</p>
 <% end %>


